mixin progressTableRow(tag)
    tr(class='table-row')
        td(class="table-cell-name")
            a(href="#" class="project-link")=tag.projectName
        td(class="table-cell-author") 
            a(href="#" class="author-link")
                img(src=tag.authorImg class="table-cell-author-img")
            p(class="table-cell-author-name")=tag.authorName   
        td(class="table-cell-status") 
            img(src=tag.statusImg class="collect-icon")
        td(class="table-cell-bar") 
            .progress-bar
                .progress-labels
                    label(data-progress-counter="0" class="progress-label progress-label-left")=tag.progressValue+'%'
                    label(data-progress-value="100" class="progress-label progress-label-right") 100%
                progress(max='100' value=tag.progressValue class='progress-indicator')
        td(class='table-cell-sum sum-element') 
            img(src="../../img/progress/coin_stack.svg" alt='coins')
            div(class="full-sum")=tag.takeSum+' руб.'